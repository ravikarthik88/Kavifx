@model Kavifx.UI.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
    var userid = User.FindFirst(c => c.Type == "nameid").Value;
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Change Password</h1>
    <a asp-controller="Dashboard" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Dashboard
    </a>
</div>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="col-xl-4 col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Change Password</h6>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" asp-controller="Profile" method="post" class="user">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="UserId" type="hidden" value="@userid" class="form-control form-control-user" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input type="password" asp-for="OldPassword" class="form-control form-control-user" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input type="password" asp-for="NewPassword" class="form-control  form-control-user" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>   
</div>


