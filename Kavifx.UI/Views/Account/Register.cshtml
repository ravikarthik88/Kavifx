@model Kavifx.UI.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
     .profile-picture 
     {
         border-radius: 50%;
         width: 150px;
         height: 150px;
         object-fit: cover;
         margin-bottom: 20px;
     }
</style>
<div class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                    </div>
                                    <form asp-asp-controller="Account" asp-action="Register" method="post" class="user" >  
                                        <span class="text-danger">@Html.ValidationSummary()</span>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-user", type = "text", placeholder = "First Name..." })                                                
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-user", type = "text", placeholder = "Last Name..." })                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", type = "text", placeholder = "Email Address" })                                            
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-user", type = "password", placeholder = "Password" })                                                
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", type = "password", placeholder = "Confirm Password" })                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Register Account" />
                                        </div>
                                        <hr>
                                        <a asp-action="Index" asp-controller="home" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Register with Google
                                        </a>
                                        <a asp-action="Index" asp-controller="home" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                                        </a>
                                        <a asp-action="Index" asp-controller="home" class="btn btn-danger btn-user btn-block">
                                            <i class="fas fa-chevron-circle-left fa-fw"></i> Back / Cancel
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Account" asp-action="Login">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}